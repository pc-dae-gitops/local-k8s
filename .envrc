export top_level=$(git rev-parse --show-toplevel)
export target_path="./local-cluster"
# Update if mac-k8s repo is not located in the same directory as this repository
export utils_dir="$(realpath ${top_level}/../mac-k8s)"
export config_dir="$(realpath ${top_level}/../mac-k8s)"
export global_config_branch=main # Update if needed, i.e. to use a different branch of mac-k8s repo

if [ -f resource/.vault-init.json ]; then
  export VAULT_TOKEN=$(jq -r '."root_token"' resources/.vault-init.json)
fi

export local_dns=kubernetes.docker.internal # Update if needed, this is for Docker for MacBook.

export VAULT_ADDR=https://vault.${local_dns}

export GITHUB_GLOBAL_CONFIG_ORG=UKE12446847 # Update if needed
export GITHUB_GLOBAL_CONFIG_REPO=mac-k8s # Update if needed

# Update the following values to match your environment.

export CLUSTER_NAME=paulc
export GITHUB_SERVER=github.com
export GITHUB_MGMT_ORG=pc-dae-gitops
export GITHUB_MGMT_REPO=local-k8s
export USER_EMAIL=paul.carlton@dae.mn
export GITHUB_USER=paul-carlton
export DOCKERREGISTRY=paulcarltondae
export FLUX_VERSION=v2.7

[ -f $utils_dir/bin/lib.sh ] && source $utils_dir/bin/lib.sh
add_to_path ${utils_dir}/bin
